<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.group6_inclass10.ShowExpensesActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Details"
        android:id="@+id/expDetails"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:id="@+id/dname"
        android:layout_below="@+id/expDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="75dp"
        android:text=""
        android:id="@+id/showName"
        android:layout_alignBottom="@+id/dname"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:id="@+id/dCategory"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/dname"/>

    <!--  <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:id="@+id/showCategory"
          android:paddingTop="10dp"
          android:paddingLeft="35dp"
          android:layout_below="@+id/showName"
          android:layout_alignRight="@+id/showName"
          android:layout_alignEnd="@+id/showName"
          android:layout_alignLeft="@+id/showName"
          android:layout_alignStart="@+id/showName"
          android:layout_gravity="right" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:id="@+id/dAmount"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/dCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/showCategory"
        android:layout_above="@+id/dAmount"
        android:layout_alignLeft="@+id/showName"
        android:layout_alignStart="@+id/showName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/showAmount"
        android:layout_alignBottom="@+id/dAmount"
        android:layout_alignLeft="@+id/showName"
        android:layout_alignStart="@+id/showName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/dDate"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/showAmount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/showDate"
        android:layout_alignBottom="@+id/dDate"
        android:layout_alignLeft="@+id/showName"
        android:layout_alignStart="@+id/showName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/close"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/expDetails"
        android:layout_alignStart="@+id/expDetails"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>
