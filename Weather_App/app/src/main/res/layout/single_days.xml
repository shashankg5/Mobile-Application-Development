    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singleTime"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/singleImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        android:id="@+id/singleTemp"
        android:paddingBottom="3dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/singleTime"
        android:layout_toStartOf="@+id/singleTime"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sTempValue"
        android:layout_alignBottom="@id/singleTemp"
        android:paddingLeft="4dp"
        android:paddingBottom="3dp"
        android:layout_toRightOf="@+id/singleTemp"
        android:layout_toEndOf="@+id/singleTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition:"
        android:id="@+id/singleCondition"
        android:paddingBottom="3dp"
        android:layout_below="@id/singleTemp"
        android:layout_alignLeft="@id/singleTemp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sConditionValue"
        android:layout_alignBottom="@id/singleCondition"
        android:paddingLeft="4dp"
        android:paddingBottom="3dp"
        android:layout_toRightOf="@+id/singleCondition"
        android:layout_toEndOf="@+id/singleTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure:"
        android:paddingBottom="3dp"
        android:id="@+id/singlePressure"
        android:layout_below="@id/singleCondition"
        android:layout_alignLeft="@id/singleCondition"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sPressureValue"
        android:paddingBottom="3dp"
        android:layout_below="@+id/sConditionValue"
        android:layout_alignLeft="@+id/sConditionValue"
        android:layout_alignStart="@+id/sConditionValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity:"
        android:paddingBottom="3dp"
        android:id="@+id/singleHumidity"
        android:layout_below="@id/singlePressure"
        android:layout_alignLeft="@id/singlePressure" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sHumidityValue"
        android:paddingBottom="3dp"
        android:layout_below="@+id/sPressureValue"
        android:layout_alignLeft="@+id/sPressureValue"
        android:layout_alignStart="@+id/sPressureValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind:"
        android:id="@+id/textView2"
        android:paddingBottom="3dp"
        android:layout_below="@id/singleHumidity"
        android:layout_alignLeft="@id/singleHumidity"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sWindValue"
        android:paddingBottom="3dp"
        android:layout_below="@+id/sHumidityValue"
        android:layout_alignLeft="@+id/sHumidityValue"
        android:layout_alignStart="@+id/sHumidityValue" />
</RelativeLayout>